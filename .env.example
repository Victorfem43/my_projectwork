# Server Configuration
PORT=3000
HOSTNAME=localhost
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/vickyexchange
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vickyexchange?retryWrites=true&w=majority

